{
  "name": "webgl2-graph",
  "version": "0.1.0",
  "description": "A high-performance WebGL2-based graph visualization library",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:demo": "vite build",
    "test": "vitest run",
    "test:unit": "vitest run --project unit",
    "test:browser": "vitest run --project browser",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "oxlint src/ tests/",
    "fmt": "oxfmt --write src/ tests/",
    "fmt:check": "oxfmt --check src/ tests/",
    "clean": "rm -rf dist demo-dist"
  },
  "keywords": [
    "webgl2",
    "graph",
    "visualization",
    "network",
    "force-directed"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "playwright": "^1.58.1",
    "typescript": "^5.3.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
